{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "ask",
    "bash": {
      "git status": "allow",
      "git diff": "allow",
      "ls": "allow",
      "pwd": "allow",
      "*": "ask"
    }
  },
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://karkinos:11434/v1"
      },
      "models": {
        "gpt-oss:latest": {
          "name": "GPT-OSS"
        },
        "qwen3-coder:latest": {
          "name": "Qwen3 coder",
          "reasoning": false,
          "tool_call": true
        }
      }
    }
  }
}
